# AWS設定
AWS_ACCOUNT_ID=123456789012
AWS_REGION=ap-northeast-1

# ECR設定
ECR_NGINX_REPO=logi-quiz-nginx
ECR_API_REPO=logi-quiz-api

# ECS設定
ECS_CLUSTER=logi-quiz-cluster
ECS_SERVICE=logi-quiz-api-service

# Secrets Manager ARN
SECRET_DATABASE_PASSWORD_ARN=arn:aws:secretsmanager:ap-northeast-1:123456789012:secret:logi-quiz/database-password
SECRET_KEY_BASE_ARN=arn:aws:secretsmanager:ap-northeast-1:123456789012:secret:logi-quiz/secret-key-base
SECRET_EMAIL_PASSWORD_ARN=arn:aws:secretsmanager:ap-northeast-1:123456789012:secret:logi-quiz/email-password

# IAM Role ARN
ECS_EXECUTION_ROLE_ARN=arn:aws:iam::123456789012:role/ecsTaskExecutionRole
ECS_TASK_ROLE_ARN=arn:aws:iam::123456789012:role/ecsTaskRole

# データベース設定
DATABASE_HOST=logi-quiz-db.xxxxx.ap-northeast-1.rds.amazonaws.com
DATABASE_NAME=db
DATABASE_USERNAME=root
DATABASE_PORT=3306

# アプリケーション設定
ALLOWED_HOSTS=api.logi-quiz.com
CORS_ORIGINS=https://logi-quiz.com

# メール設定
MAILER_HOST=logi-quiz.com
EMAIL_ADDRESS=your-email@gmail.com
SMTP_ADDRESS=smtp.gmail.com
SMTP_PORT=587
SMTP_DOMAIN=gmail.com
